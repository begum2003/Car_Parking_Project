<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|clip_horizontal|center|clip_vertical|start|fill"
    android:background="@drawable/logo"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center|top|left|center_vertical|fill_vertical|end"
        android:layout_marginStart="31dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/custom_edittext"
        android:padding="8dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="295dp">


        <Button
            android:id="@+id/loginbutton"
            android:layout_width="155dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="91dp"
            android:height="48dp"
            android:text="Register" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="126dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="98dp"
            android:layout_marginBottom="449dp"
            android:text="Sign Up"
            android:textColor="#9C27B0"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:height="100dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="username"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="120dp"
            android:height="100dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:hint="email"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/password"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="185dp"
            android:height="100dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="255dp"
            android:height="100dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/baseline_lock_reset_24"
            android:drawablePadding="8dp"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/numplate"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="320dp"
            android:height="100dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/baseline_directions_car_24"
            android:drawablePadding="8dp"
            android:hint="car plate number"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background" />


    </androidx.cardview.widget.CardView>
</RelativeLayout>